        mc:Ignorable="d"
        Title="Register Login" Height="500" Width="700"
        Background="{x:Null}"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" AllowsTransparency="True">

